<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View.SiteManager.SiteManagerAddEventActivity">

    <RelativeLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_back"
            android:layout_alignParentStart="true"
            android:layout_margin="20dp"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Up Donation Site"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_title"
        android:layout_above="@+id/submit_button"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"/>

            <EditText
                android:id="@+id/add_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Name"
                android:singleLine="false"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/register_border"
                android:textColorHint="@color/grey"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Site Manager"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/add_site_manager_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/register_border"
                android:textColorHint="@color/grey"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/add_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/register_border"
                android:textColorHint="@color/grey"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/add_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:singleLine="false"
                android:clickable="true"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/register_border"
                android:textColorHint="@color/grey"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date Start"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/add_date_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date Start"
                android:clickable="true"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/register_border"
                android:textColorHint="@color/grey"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Type Needed"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"/>

            <GridLayout
                android:id="@+id/blood_type_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:columnCount="4"
                android:padding="20dp">

                <CheckBox
                    android:id="@+id/checkbox_A_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A+"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:buttonTint="@color/black"
                    android:layout_row="0"
                    android:layout_column="0" />

                <CheckBox
                    android:id="@+id/checkbox_A_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A-"
                    android:buttonTint="@color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_row="0"
                    android:layout_column="1" />

                <CheckBox
                    android:id="@+id/checkbox_B_plus"
                    android:buttonTint="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B+"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_row="0"
                    android:layout_column="2" />

                <CheckBox
                    android:id="@+id/checkbox_B_minus"
                    android:buttonTint="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B-"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_row="0"
                    android:layout_column="3" />

                <CheckBox
                    android:id="@+id/checkbox_O_plus"
                    android:buttonTint="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O+"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:layout_row="1"
                    android:layout_column="0" />

                <CheckBox
                    android:buttonTint="@color/black"
                    android:id="@+id/checkbox_O_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O-"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_row="1"
                    android:layout_column="1" />

                <CheckBox
                    android:id="@+id/checkbox_AB_plus"
                    android:buttonTint="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB+"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_row="1"
                    android:layout_column="2" />

                <CheckBox
                    android:id="@+id/checkbox_AB_minus"
                    android:buttonTint="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB-"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_row="1"
                    android:layout_column="3" />
            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Mission"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/add_event_mission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Mission"
                android:padding="20dp"
                android:singleLine="false"
                android:layout_marginTop="10dp"
                android:background="@drawable/register_border"
                android:textColorHint="@color/grey"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="@color/vibrant_pink"
        app:cornerRadius="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/red"
        android:visibility="invisible" />
</RelativeLayout>